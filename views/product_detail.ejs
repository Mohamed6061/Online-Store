<%- include('./Partials/header.ejs') %>

    <style>
        label {
            font-size: 2em;
            color: #ad1616;
        }

        .lyer2 {
            position: absolute;
            color: #f33f3f;
            z-index: -1;
            transform: translate(3px, -65px);
        }
    </style>

    <div class="py-5"></div>

    <div class="container">
        <h1 class="display-4">Product Details</h1>
        <h1 class="lyer2 display-4">Product Details</h1>
        <div class="row">
            <div class="col-md-6">
                <img style="width :450px; height: 400px;" src="<%= product.image %>" alt="<%= product.name %>">
            </div>
            <div class="col-md-6">
                <h2 class="pb-3">
                    <%= product.name %>
                </h2>
                <p class="lead pb-3 ">
                    <%= product.description%>
                </p>
                <h2>
                    <%= product.price%><span>L.E</span>
                </h2>
                <form method="post" class="pb-4" action="/product_details">
                    <div class="form-group">
                        <label for="quantity">How many do you want</label>
                        <input class=" form-control" style="width: 120px;  border: 1px solid #f33f3f ; width:540px ;"
                            type="number" name="quantity" id="quantity" min="1">
                        <input type="hidden" name="id" value="<%= product.id%>" />
                    </div>
                    <button class="btn btn-danger btn-block rounded-pill" type="submit">Add To Cart</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('./Partials/footer.ejs') %>